@model MyApp.Namespace.User


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Password</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-gray-100">

    <!-- Navigation bar -->
    <nav class="bg-black text-white flex justify-between p-4 shadow-md">
        <ul class="flex space-x-6">
            <li>
                <a asp-action="Dashboard" asp-controller="Login"
                    class="hover:bg-gray-700 px-4 py-2 rounded-md transition-all">Home</a>
            </li>
            <li>
                <a asp-action="User" asp-controller="Login"
                    class="hover:bg-gray-700 px-4 py-2 rounded-md transition-all">User Profile</a>
            </li>
            <li>
                <a asp-action="Index" asp-controller="Task"
                    class="hover:bg-gray-700 px-4 py-2 rounded-md transition-all">Task</a>
            </li>
            <li>
                <a asp-action="EditPassword" asp-controller="Login"
                    class="hover:bg-gray-700 px-4 py-2 rounded-md transition-all">Edit Password</a>
            </li>
        </ul>
        <ul class="flex space-x-6">
            <li>
                <a asp-action="Logout" asp-controller="Login"
                    class="hover:bg-gray-700 px-4 py-2 rounded-md transition-all">Logout</a>
            </li>
        </ul>
    </nav>

    <div class="flex justify-center items-center min-h-screen bg-gray-100 py-8 px-4">
        <div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-md">

            <h2 class="text-3xl font-bold text-center mb-6 text-gray-700">Edit Password</h2>

            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="text-green-500 bg-green-100 p-4 mb-4 rounded-md">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="UpdatePassword" asp-controller="Login" method="post" class="space-y-6">
                <div class="mb-4">
                    <label for="newPassword" class="block text-lg font-medium text-gray-700">New Password</label>
                    <input type="password" id="NewPassword" name="NewPassword"
                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        asp-for="c_Password" required />
                </div>

                <div class="mb-6">
                    <label for="confirmPassword" class="block text-lg font-medium text-gray-700">Confirm New
                        Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword"
                        class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                        required />
                </div>

                <button type="submit"
                    class="bg-black text-white px-6 py-3 rounded-md w-full hover:bg-gray-500 transition-all">Update
                    Password</button>
            </form>

        </div>
    </div>

</body>

</html>
